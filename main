from dooz.interface import *
import random


class input(InputInt):
    def xPos(self):
        xpos = input("enter row")

        return xpos

    def yPos(self):
        ypos = input("enter colum")

        return ypos

    def get_random_first_player(self):
        return random.randint(0, 1)


class logic(LogicInt):

    def create_board(self):
        for i in range(3):
            row = []
            for j in range(3):
                row.append('-')
            self.board.append(row)

    def fix_spot(self, row, col, player):
        self.board[row][col] = player

    def is_player_win(self, player):
        win = None

        n = len(self.board)

        # checking rows
        for i in range(n):
            win = True
            for j in range(n):
                if self.board[i][j] != player:
                    win = False
                    break
            if win:
                return win

        # checking columns
        for i in range(n):
            win = True
            for j in range(n):
                if self.board[j][i] != player:
                    win = False
                    break
            if win:
                return win

        # checking diagonals
        win = True
        for i in range(n):
            if self.board[i][i] != player:
                win = False
                break
        if win:
            return win

        win = True
        for i in range(n):
            if self.board[i][n - 1 - i] != player:
                win = False
                break
        if win:
            return win
        return False

        for row in self.board:
            for item in row:
                if item == '-':
                    return False
        return True

    def is_board_filled(self):
        for row in self.board:
            for item in row:
                if item == '-':
                    return False
        return True

    def swap_player_turn(self, player):
        return 'X' if player == 'O' else 'O'


class output(OutputInt):
    def show_board(self):
        for row in self.board:
            for item in row:
                print(item, end=" ")
            print()


class Start:
 def __init__(self):
    self.board = []
    L=logic()
    I=input()
    O=output()

    L.create_board()

    player = 'X' if I.get_random_first_player() == 1 else 'O'
    while True:
            print(f"Player {player} turn")

            O.show_board()

            # taking user input
            row, col = list(
                map(int, input("Enter row and column numbers to fix spot: ").split()))
            print()

            # fixing the spot
            L.fix_spot(row - 1, col - 1, player)

            # checking whether current player is won or not
            if L.is_player_win(player):
                print(f"Player {player} wins the game!")
                break

            # checking whether the game is draw or not
            if L.is_board_filled():
                print("Match Draw!")
                break

            # swapping the turn
            player = logic.swap_player_turn(player)

    # showing the final view of board
    print()
    O.show_board()


Start()


